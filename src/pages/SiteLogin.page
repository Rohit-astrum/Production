<apex:page id="loginPage" showHeader="false" title="{!$Label.site.site_login}" standardStylesheets="false">
  <apex:composition template="{!$Site.Template}">
    <apex:define name="body">  
      <center>
          <apex:panelGrid width="758" cellpadding="0" cellspacing="0" bgcolor="white" columns="1" styleClass="topPanelContainer"> 
            <apex:outputPanel layout="block" styleClass="topPanel" style="font-size:1.6em;">
            <br/>
              <h2>{!$Label.site.login}</h2>
              <apex:panelGrid width="758" cellpadding="0" cellspacing="0" bgcolor="white" columns="2"> 
                <apex:panelGroup >
                  <br/>
                  <c:SiteLogin id="siteLogin"/>
                  <br/>
                </apex:panelGroup>
              </apex:panelGrid> 
             </apex:outputPanel>
          </apex:panelGrid> 
      </center>
      <br/>
      <br/>
    </apex:define>
  </apex:composition>
  
</apex:page>